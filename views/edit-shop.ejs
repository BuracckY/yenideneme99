// edit-shop.ejs
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dükkan Düzenle</title>
    <style>
        :root { --bg-dark: #121212;
            --bg-panel: #1e1e1e; --border-color: #333; --text-light: #e0e0e0; --text-muted: #aaa; --blue: #007bff; --input-bg: #333; --input-border: #555;
            --link-blue: #4dabf5;}
        body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            margin: 0; padding: 25px; background-color: var(--bg-dark); color: var(--text-light); }
        .container { max-width: 800px;
            margin: 30px auto; padding: 25px; background: var(--bg-panel); border-radius: 10px; border: 1px solid var(--border-color);
        }
        h1 { border-bottom: 1px solid var(--border-color); padding-bottom: 15px;
        }
        .form-grid { display: grid; gap: 18px;
        }
        label { font-weight: 500; color: var(--text-muted); display: block; margin-bottom: 6px; font-size: 0.9em;
        }
        input, select, textarea { padding: 12px; border-radius: 6px; border: 1px solid var(--input-border);
            font-size: 1em; background: var(--input-bg); color: var(--text-light); width: 100%; box-sizing: border-box;
        }
        textarea { resize: vertical; min-height: 100px;
        }
        button { background-color: var(--blue); color: white; cursor: pointer; border: none;
            padding: 12px 18px; border-radius: 6px; font-size: 1em; font-weight: 500; }
        .back-link { color: var(--link-blue);
            text-decoration: none; display: inline-block; margin-bottom: 20px;}
    </style>
</head>
<body>
    <div class="container">
        <a href="/admin/dashboard" class="back-link">&larr; Panele Geri Dön</a>
        <h1>Dükkanı Düzenle: <%= shop.name %></h1>
        <form action="/admin/edit-shop/<%= shop._id %>" method="POST" class="form-grid">
            <div>
                <label for="shop-name">Dükkan Adı:</label>
                <input type="text" id="shop-name" name="name" value="<%= shop.name %>" required>
            </div>
            <div>
                 <label for="shop-desc">Dükkan Açıklaması (Opsiyonel):</label>
                 <textarea id="shop-desc" name="description"><%= shop.description || '' %></textarea>
            </div>
            <div>
                 <label for="shop-city-select">Şehir:</label>
                 <select id="shop-city-select" name="city" required>
                     <option value="">-- Şehir Seçin --</option>
                     <% cities.forEach(city => { %>
                         <option value="<%= city._id %>" <%= (shop.city && shop.city._id && shop.city._id.toString() === city._id.toString()) ? 'selected' : '' %>>
                             <%= city.name %>
                         </option>
                     <% }) %>
                 </select>
            </div>
            <div>
                 <label for="shop-image">Mağaza Resim URL (Opsiyonel / Kare):</label>
                 <input type="text" id="shop-image" name="imageUrl" value="<%= shop.imageUrl || '' %>" placeholder="https://...">
            </div>
            <button type="submit">Güncelle</button>
        </form>
    </div>
</body>
</html>